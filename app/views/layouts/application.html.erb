<!DOCTYPE html>
<html>
  <head>
    <title>Website</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <% if user_signed_in? %>
      Welcome <strong><%= current_user.name %></strong>.
  <%= link_to '<button type="button" class="btn btn-outline-success">Edit Profile</button>'.html_safe, edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to '<button type="button" class="btn btn-outline-danger">Logout</button>'.html_safe, destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
  <%= link_to '<button type="button" class="btn btn-outline-info">Sign Up</button>'.html_safe, new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to '<button type="button" class="btn btn-outline-info">Login</button>'.html_safe, new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
  </body>
</html>
